<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/white"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp">

    <!--    Student List Layout    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    Profile Picture Skeleton Placeholder    -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_picture"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/profile_picture"
            android:background="@drawable/student_placeholder"
            app:shapeAppearanceOverlay="@style/RoundedCorners"/>

        <!--    Student Name Skeleton Placeholder    -->
        <TextView
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:alpha="0.8"
            android:background="@drawable/student_placeholder" />

        <!--    Student Address Layout    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            tools:ignore="UseCompoundDrawables">

            <!--    Address Icon Skeleton Placeholder    -->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/address"
                android:layout_gravity="center"
                android:background="@drawable/student_placeholder" />

            <!--    Student Address Skeleton Placeholder    -->
            <TextView
                android:id="@+id/student_address"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/student_placeholder" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>